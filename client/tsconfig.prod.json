{
  "angularCompilerOptions": {
    "skipMetadataEmit": true,
    "genDir": "src/aot/",
    "debug": false
  },
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.css",
    "src/**/*.html"
  ],
  "exclude": [
    "More",
    "SKIP-create-bundle",
    "SKIP-AOT",
    "node_modules/"
  ]
}
